{
    "role": "ingress",
    // DPDK specific configurations, port configurations etc.
    "interfaces": {
        // REQUIRED DPDK Port ID for receiving and transmitting packets, 
        "rx_port_id": 0,
        "tx_port_id": 0,
        // NOTE Optional ports, current port configuratiosn are referenced through
        //      previous POT implementation, beacause of this, port_id and tap_port_id
        //      is used as optional ports replacing the above required port once
        //      the testings are done these port configs will be replaced with STANDARD
        //      rx and tx logic
        "port_id": 0,
        "tap_port_id": 0
    },

    // Name of the PoT profile set to load from the config/pot_profiles directory
