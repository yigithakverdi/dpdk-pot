    // likely use this name to find and load corresponding files
    // (e.g., "profile_set_A_even.json", "profile_set_A_odd.json")    
    "pot_profile_set_name": "profile_set_A",
    "node_id": "ingress-node-01",


  // Optional: EAL core configuration override (if not using default from start script)
  // "eal_coremask" : "0x3"

