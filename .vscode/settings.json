{
    "configurations": [
        {
            "name": "Linux",                                                            // You can name this configuration anything
            "compilerPath": "/usr/bin/gcc",                                             // Or clang, ensure this matches what Meson uses
            "cStandard": "c11",                                                         // Or c17, c99 as needed
            "cppStandard": "c++17",                                                     // Adjust if you use C++ features
            "intelliSenseMode": "linux-gcc-x64",                                        // Adjust for clang or architecture if needed
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",        // Path to Meson's compile commands
            "includePath": [
                // ...
                "${workspaceFolder}/include/**"
            ],
            "defines": [
                // ...
            ]
        }
    ],
    "version": 4,
    "C_Cpp.default.configurationProvider": "mesonbuild.mesonbuild",
    "C_Cpp.codeAnalysis.runAutomatically": true,
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.intelliSenseEngine": "default",                                               // Use Tag Parser for better performance with large projects
    "C_Cpp.intelliSenseEngineFallback": "Disabled",                                         // Disable fallback to avoid performance issues
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/src",
        "${workspaceFolder}/build/meson-private",
        "${workspaceFolder}/build/meson-uninstalled"
    ],
    "C_Cpp.default.defines": [
        "HAVE_CONFIG_H",                                                                    // Define if you have a config.h generated by Meson
        "MESON_BUILD"                                                                       // Define to indicate this is a Meson build
    ],
    "C_Cpp.default.browse.path": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/src",
        "${workspaceFolder}/build/meson-private",
        "${workspaceFolder}/build/meson-uninstalled"
    ],
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,                             // Limit symbols to included headers for performance
    "C_Cpp.default.browse.databaseFilename": "${workspaceFolder}/.vscode/browse.db",        // Path to the browse database
    "C_Cpp.default.browse.autoDetect": true,                                                // Automatically detect browse paths
    "C_Cpp.default.browse.useDefaultDatabase": false,                                       // Use a custom database file    
    "files.associations": {
        "*.c": "c",
        "common.h": "c",
        "port.h": "c",
        "cstdlib": "c",
        "headers.h": "c",
        "rte_ether.h": "c",
        "crypto.h": "c",
        "rte_mbuf.h": "c",
        "rte_mbuf_dyn.h": "c",
        "rte_mempool.h": "c",
        "string.h": "c",
        "ctype.h": "c",
        "transit.h": "c",
        "ingress.h": "c",
        "processing.h": "c",
        "egress.h": "c",
        "stdint.h": "c",
        "init.h": "c",
        "nodemng.h": "c",
        "compare": "c",
        "cstdint": "c"
    }
}